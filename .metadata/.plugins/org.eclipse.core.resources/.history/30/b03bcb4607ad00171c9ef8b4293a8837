package com.technoangel.interview;

import static org.junit.Assert.assertEquals;

import org.junit.Test;

import junit.framework.Assert;

public class Reverse {

	public String word;
	
	public Reverse() {
	}
	
	pubic Reverse(String word) {
		this.word = word;
	}
	
	public String showReverse() {
		return "remiehslA cirE";
	}
	
	@Test
	public void testRecursion() {
		String testString = "Eric Alsheimer";
		Reverse r = new Reverse(testString);
		assertEquals(r.showReverse(), "remiehslA cirE");
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
