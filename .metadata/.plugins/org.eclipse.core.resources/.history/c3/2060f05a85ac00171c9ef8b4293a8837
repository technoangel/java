package com.technoangel.json;

import java.io.FileInputStream;
import java.io.FileReader;
import java.io.IOException;
import java.io.InputStream;

import org.json.simple.*;
import org.json.simple.parser.*;

import org.junit.*;

public class JsonBasicTester {

	public static final String JSON_FILE="source.json";
	
	public JSONObject buildJsonObject() {
		return 1;
	}
	
	@Test
	public static void testJsonObject() {
		JSONObject obj = new JsonBasicTester().buildJsonObject();
		Assert.assertEquals(obj, 1);
	}
	
	public static void main(String[] args) throws IOException {
		// Create a new parser
		JSONParser parser = new JSONParser();
		
		// Attempt to deserialize data
		try {
			// Parse data from file
			Object obj = parser.parse(new FileReader(JSON_FILE));
			
			// Create JSON Object
			JSONObject jsonObject = (JSONObject) obj;
			
		} catch (ParseException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}